{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "args": [  
        "--require",
        "ts-node/register",
        "node_modules/mocha/lib/cli/cli.js",
        "test/**/*.ts",
        "--timeout",
        "999999",
        "--colors",
        "--recursive"
      ],
      "internalConsoleOptions": "openOnSessionStart",
      "env": {
        "TS_NODE_PROJECT": "tsconfig.test.json",
      },
      "envFile": "${workspaceFolder}/.env"
    }
  ]
}